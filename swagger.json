{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "API REST de Materias Escolares",
      "description": "API REST para gestionar materias escolares"
    },
    "host": "localhost:3000",
    "basePath": "/api/v1",
    "schemes": ["http"],
    "paths": {
      "/subjects": {
        "get": {
          "summary": "Obtener materias con paginaci√≥n",
          "parameters": [
            {
              "name": "page",
              "in": "query",
              "type": "integer",
              "default": 1
            },
            {
              "name": "size",
              "in": "query",
              "type": "integer",
              "default": 10
            }
          ],
          "responses": {
            "200": {
              "description": "Lista de materias",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Subject"
                }
              }
            }
          }
        },
        "post": {
          "summary": "Crear una nueva materia",
          "parameters": [
            {
              "name": "subject",
              "in": "body",
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                },
                "required": ["name"]
              }
            }
          ],
          "responses": {
            "201": {
              "description": "Materia creada"
            }
          }
        }
      },
      "/subjects/{id}": {
        "get": {
          "summary": "Obtener materia por ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "type": "integer",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "Materia encontrada",
              "schema": {
                "$ref": "#/definitions/Subject"
              }
            },
            "404": {
              "description": "Materia no encontrada"
            }
          }
        },
        "put": {
          "summary": "Actualizar materia por ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "type": "integer",
              "required": true
            },
            {
              "name": "subject",
              "in": "body",
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Materia actualizada"
            },
            "404": {
              "description": "Materia no encontrada"
            }
          }
        },
        "delete": {
          "summary": "Eliminar materia por ID",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "type": "integer",
              "required": true
            }
          ],
          "responses": {
            "200": {
              "description": "Materia eliminada"
            },
            "404": {
              "description": "Materia no encontrada"
            }
          }
        }
      }
    },
    "definitions": {
      "Subject": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
